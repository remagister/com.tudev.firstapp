<resources>

    <!-- Base application theme. -->

    <style name="AppThemeColored" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeDim" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/dim_colorBackground</item>
        <item name="android:textColorPrimary">@color/dim_colorPrimaryText</item>
        <item name="android:textColorPrimaryInverse">@color/dim_colorPrimaryInverse</item>
        <item name="android:textColorSecondary">@color/dim_colorSecondaryText</item>
        <item name="android:textColorHint">@color/dim_colorHintText</item>
        <item name="android:divider">@color/dim_colorDividers</item>
        <item name="colorPrimary">@color/dim_colorPrimary</item>
        <item name="colorPrimaryDark">@color/dim_colorPrimaryDark</item>
        <item name="colorAccent">@color/dim_colorAccent</item>
    </style>

    <style name="AppActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">?android:textColorPrimaryInverse</item>
    </style>

    <!-- contact icons styles -->
    <style name="ContactIcon">
        <item name="android:layout_width">@dimen/avatar_width</item>
        <item name="android:layout_height">@dimen/avatar_height</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:saveEnabled">true</item>
    </style>

    <style name="ContactIcon.Dim">
        <item name="android:background">?android:divider</item>
    </style>

    <!-- Text items -->

    <style name="TextBase" parent="android:Widget.Holo.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextBase.Left">
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:textAppearance"> ?android:attr/textAppearanceMedium </item>
    </style>

    <style name="TextBase.Right">
        <item name="android:layout_gravity">end</item>
        <item name="android:textAppearance"> ?android:attr/textAppearanceMedium </item>
    </style>

    <!-- Button styles -->

    <style name="AddButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@android:color/holo_green_dark</item>
    </style>

    <style name="RemoveButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@android:color/holo_red_dark</item>
    </style>

    <!-- Frame layouts-->
    <style name="contactFrameLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
    </style>

    <!-- In Activity container -->
    <style name="activityRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
    </style>

</resources>
